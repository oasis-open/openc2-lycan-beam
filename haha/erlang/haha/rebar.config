{erl_opts, [ debug_info
           , {parse_transform, lager_transform}
           , warnings_as_errors
           ]}.

{deps, [cowboy
       , jiffy
       , lager
       ]}.

{plugins, [rebar3_run]}.

{enable_cover, true}.

{relx, [{release, { haha, "0.1.0" },
         [haha,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [ { test
             , [ { deps , [ gun ] }
               , { erl_opts , [ debug_info ] }
               ]
             }
           , { prod
             , [ { relx
                 , [ {dev_mode, false}
                   , {include_erts, true}
                   ]
                 }
               ]
             }
           ]
}.
